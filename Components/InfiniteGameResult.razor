@using Pokefeet2.Ressources

<div class="flex-grow-1 d-flex flex-column justify-center mt-16 card pa-2">
	<MudText Typo="Typo.body1" Class="@GetColorClassH1()" Style="text-align:center;">@_title</MudText>
	<MudText Typo="Typo.body1" Style="text-align: center; white-space: nowrap" Class="pkmnBody">
		@_desc <span class="@GetColorClass()">@PkmnName</span>
	</MudText>
	<div class="d-flex justify-center">
		<MudImage Src="@Helper.GetPokemonImg(Pkmn.Id)" Width="128" Height="128" Elevation="25" Class="rounded-lg ma-4 imgSize card" />
	</div>

	<MudText Typo="Typo.body1" Style="text-align: center; white-space: nowrap" Class="pkmnBody mt-4">
		Vous avez deviné : @PkmnCount pokemons !
	</MudText>
	
	<div class="flex-grow-1 d-flex flex-column justify-center align-center">
		<MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Replay" OnClick="ReplayGame" Class="pkmnBody card btn mt-8">
			@Translation.Replay
		</MudButton>
	</div>
</div>
